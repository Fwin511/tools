{
    "name": "feiyun/tools",
    "description": "飞云工具包 - 企业级 Hyperf 辅助工具集合，包含自动筛选等实用工具",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "hyperf",
        "tools",
        "filter",
        "query",
        "database",
        "utilities",
        "swoole"
    ],
    "authors": [
        {
            "name": "Sally",
            "email": "baochengyong@feiwin.cn",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/Fwin511/tools",
    "support": {
        "issues": "https://github.com/Fwin511/tools/issues",
        "source": "https://github.com/Fwin511/tools"
    },
    "require": {
        "php": "^8.0",
        "hyperf/database": "^3.0",
        "hyperf/http-server": "^3.0",
        "hyperf/context": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "hyperf/testing": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Feiyun\\Tools\\": "src/",
            "Feiyun\\Tools\\AutoFilter\\": "tools/auto-filter/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Feiyun\\Tools\\Tests\\": "tests/"
        }
    },
    "extra": {
        "hyperf": {
            "config": "Feiyun\\Tools\\Providers\\FeiyunToolsServiceProvider"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "readme:en": "make readme-en",
        "readme:cn": "make readme-cn",
        "readme:restore": "make readme-restore"
    }
}